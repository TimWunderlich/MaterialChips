<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/chip_height"
    android:background="@drawable/chip_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumbnail"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="center"
        android:paddingBottom="@dimen/chip_padding_bottom"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/chip_padding_left"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/chip_padding_left"
        android:paddingTop="@dimen/chip_padding_top"
        android:textColor="@color/chip_text_color"
        android:textSize="13sp"
        tools:text="John Doe" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/chip_delete_button_size"
        android:layout_height="@dimen/chip_delete_button_size"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/label"
        android:layout_toRightOf="@+id/label"
        android:contentDescription="@null"
        android:gravity="center"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_chip_delete_24dp" />

</RelativeLayout>